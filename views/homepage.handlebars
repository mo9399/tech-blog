<div class="posts">
  {{#each posts}}
    <article class="post">
      <div class="col-12 mb-3 bg-dark text-light p-3">
        <h3 class="text-light">{{title}}</h3>
        <h5 class="post-info">Posted by
          {{User.username}}
          on
          {{format_date created_at}}</h5>
        <a href="/posts/{{id}}" class="btn">View Post</a>
      </div>
    </article>
  {{/each}}
</div> 