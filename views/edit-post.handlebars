<div class="post">
  <article class="card">
    <div class="card-header">
      <h3 class="text-light">Edit Post</h3>
    </div>
    <form id="edit-post-form" class="card-body">

      <div>
        <label class="form-label" for="post-title">Title</label>
        <input
          type="text"
          name="post-title"
          value="{{post.title}}"
          class="form-input"
        />
      </div>

      <div>
        <label class="form-label" for="post-body">Content</label>
        <textarea
          name="post-body"
          class="form-input"
        >{{post.post_body}}</textarea>
      </div>

      <button type="submit" class="btn form-btn">Update Post</button>

      <button type="button" id="delete-btn" class="btn form-btn">Delete</button>
    </form>
  </article>
</div>

<script src="/javascript/edit-post.js"></script> 