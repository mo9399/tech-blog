<div class="posts">
  {{#each posts}}
    <article class="post">
      <div class="col-12 mb-3 bg-dark text-light p-3">
        <h3 class="text-light">{{title}}</h3>
        <h5 class="post-info">{{format_date created_at}}</h5>
        <a href="/dashboard/edit/{{id}}" class="btn">Edit Post</a>
      </div>
    </article>
  {{/each}}
</div> 