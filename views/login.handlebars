<div class="card">
  <div class="card-header">
    <h2 class="text-light">Login</h2>
  </div>
  <form class="login-form card-body">
    <div>
      <label for="username-login" class="form-label">Username</label>
      <input type="text" class="form-input" id="username-login" />
    </div>
    <div>
      <label for="password-login" class="form-label">Password</label>
      <input type="password" class="form-input" id="password-login" />
    </div>
    <button type="submit" id="login-btn" class="btn form-btn">Login!</button>
    <a type="button" class="text-dark" href="/signup">Don't have an account?
      Sign up here!</a>
  </form>
</div>

<script src="/javascript/login.js"></script> 